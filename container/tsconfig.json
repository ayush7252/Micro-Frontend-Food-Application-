{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "homepage/*": ["_remotes/homepage/*"],
      "loginpage/*": ["_remotes/loginpage/*"],
      "signuppage/*": ["_remotes/signuppage/*"],
      "navbar/*": ["_remotes/navbar/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules"]
}
